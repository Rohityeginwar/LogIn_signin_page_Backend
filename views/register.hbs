<html>

<head>
    <link href="style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body style="text-align:center; margin-top:10%;">
    <div id="welcome"></div>
    <div id="register_form">
        <div id="border">
            <form id="form" required action="/register" method="post">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="name" class="control-label">Name :</label>
                        <input name="name" type="text" class="form-control" placeholder="name" id="name" required />
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label">Email :</label>
                        <input name="email" type="email" class="form-control" placeholder="Email@gmail.com" id="Email"
                            required />
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label">Password :</label>
                        <input name="password" class="form-control" type="password" placeholder="Password" id="Password"
                            required />
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label">Confirm Password :</label>
                        <input name="cPassword" class="form-control" type="password" placeholder="Confirm Password"
                            id="cPass" required />
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label">Phone :</label>
                        <input name="phone" class="form-control" placeholder="Phone" id="Phone" />
                    </div>
                </div>
                <button type="submit" class="btn btn-success" value="Register">Register</button>
            </form>
        </div>
    </div>

</html>